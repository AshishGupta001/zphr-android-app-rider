<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/closeImg"
        android:background="@drawable/rectangle_setfingerprint_bottomsheet">

        <com.view.MTextView
            android:id="@+id/titleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="start"
            android:text="Choose an account"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_14"
            android:visibility="visible"
            app:customTypeFace="@string/systemMediumFont" />

        <LinearLayout
            android:id="@+id/social_bottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTxt"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/googleArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="22dp"
                    app:srcCompat="@drawable/ic_google" />

                <com.view.MTextView
                    android:id="@+id/googleHtxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:text="Google"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_12"
                    android:visibility="visible"
                    app:customTypeFace="@string/systemRegular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/facebookArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    app:srcCompat="@drawable/ic_fb" />

                <com.view.MTextView
                    android:id="@+id/fbHTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:text="Facebook"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_12"
                    android:visibility="visible"
                    app:customTypeFace="@string/systemRegular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linkdinArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    app:srcCompat="@drawable/ic_linkedin" />

                <com.view.MTextView
                    android:id="@+id/linkedinHtxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:text="Linkdin"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_12"
                    android:visibility="visible"
                    app:customTypeFace="@string/systemRegular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/smartLoginArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="22dp"
                    android:tint="@color/appThemeColor_1"
                    app:srcCompat="@drawable/ic_finger_print" />

                <com.view.MTextView
                    android:id="@+id/smartLoginHtxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:text="smart Login with device ID"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_size_12"
                    android:visibility="visible"
                    app:customTypeFace="@string/systemRegular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/smartLoginDisableArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginEnd="22dp"
                        android:tint="@color/gray"
                        app:srcCompat="@drawable/ic_finger_print" />

                    <com.view.MTextView
                        android:id="@+id/smartLoginDisableHtxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:gravity="start|center"
                        android:includeFontPadding="false"
                        android:text="Face ID/Touch ID/Passcode"
                        android:textAlignment="viewStart"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/txt_size_12"
                        android:visibility="visible"
                        app:customTypeFace="@string/systemRegular" />
                </LinearLayout>

                <com.view.MTextView
                    android:id="@+id/smartLoginDisableNoteTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:text="Face ID/Touch ID/Passcode"
                    android:textAlignment="viewStart"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/txt_size_10"
                    app:customTypeFace="@string/systemRegular" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/closeImg"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/white"
        android:gravity="end"
        android:padding="@dimen/_10sdp"
        android:tint="@color/gray"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_close_button" />
</RelativeLayout>