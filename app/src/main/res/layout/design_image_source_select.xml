<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="bottom"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/closeImg"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/round_shape"
        android:backgroundTint="@color/white"
        android:padding="@dimen/_10sdp"
        android:tint="@color/gray"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_close_button" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_minus11sdp"
        android:elevation="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <com.view.MTextView
                android:id="@+id/chooseImgHTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:customTypeFace="@string/systemSemiBold"
                tools:text="Choose Category" />

            <LinearLayout
                android:id="@+id/selectArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:id="@+id/consumeView1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:visibility="gone" />

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_95sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:id="@+id/cameraView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.view.SelectableRoundedImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:clickable="false"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_photo_camera" />

                        <com.view.MTextView
                            android:id="@+id/cameraTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:textAlignment="viewStart"
                            android:textColor="#2F2F2F"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="visible"
                            app:customTypeFace="@string/systemRegular" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_95sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:id="@+id/galleryView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.view.SelectableRoundedImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:clickable="false"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_gallery" />

                        <com.view.MTextView
                            android:id="@+id/galleryTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:textAlignment="viewStart"
                            android:textColor="#2F2F2F"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="visible"
                            app:customTypeFace="@string/systemRegular" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/fileArea"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_95sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.view.SelectableRoundedImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:clickable="false"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_document" />

                        <com.view.MTextView
                            android:id="@+id/docTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:textAlignment="viewStart"
                            android:textColor="#2F2F2F"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="visible"
                            app:customTypeFace="@string/systemRegular" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/consumeView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:elevation="0dp"
                    android:visibility="visible"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/btnIconImgView"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:padding="8dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_add_circle"
                            app:tint="@color/appThemeColor_Dark_1" />

                        <com.view.MTextView
                            android:id="@+id/btnTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="Prescription uploaded by you"
                            android:textAlignment="viewStart"
                            android:textColor="#2F2F2F"
                            android:textSize="@dimen/txt_size_14"
                            app:customTypeFace="@string/systemMediumFont"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>